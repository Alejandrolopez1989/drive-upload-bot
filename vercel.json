{
  "version": 2,
  "builds": [
    {
      "src": "bot.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"  // Ajusta esto si es necesario
      }
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "bot.py"
    },
    {
      "src": "/set-webhook",
      "dest": "bot.py"
    },
    {
      "src": "/get-webhook-info",
      "dest": "bot.py"
    }
  ]
}
